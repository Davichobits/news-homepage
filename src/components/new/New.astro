---
import { articles } from '../../common/articles';
import type { New } from '../../common/types';
import NewCard from './NewCard.astro';
interface Props {
  styles?: string
}

const {styles = ''} = Astro.props;

---

<section class={`bg-Very-dark-blue text-Off-white py-4 px-6 ${styles}`}>
  <h1 class="text-Soft-orange font-bold text-[32px]">New</h1>
  {
    articles.slice(0,3).map((article: New) => (
      <NewCard drawLastLine={false} {...article} />
    ))
  }
</section>
