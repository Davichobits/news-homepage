---
import type { GetStaticPaths } from "astro";
import Layout from '../../layouts/Layout.astro'
import type { New } from '../../common/types';
import { articles } from '../../common/articles';

export const getStaticPaths = (() => {
  return articles.map(article => ({params: {slug:`${article.url}`}}));
}) satisfies GetStaticPaths;

const {slug} = Astro.params;
const currentArticle: New = articles.filter((article: New) => article.url === slug)[0]
---

<Layout title={currentArticle.title}>
  <h1 class="font-bold text-2xl mb-6">{currentArticle.title}</h1>
  <p class="text-Dark-grayish-blue mb-6 italic">{currentArticle.description}</p>
  <p>{currentArticle.content}</p>
  <div class="flex justify-end mt-6">
    <a id="go-back" class="hover:text-Soft-red mb-6 block cursor-pointer" >Atr√°s</a>
  </div>
</Layout>

<script>
  document.getElementById('go-back')?.addEventListener('click', () => {
    window.history.back();
  });
</script>